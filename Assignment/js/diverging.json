{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 400,
    "width": 750,
    "data": {
      "url": "Dataset/co-emissions-per-capita-continent.csv",
      "format": {
        "type": "csv"
      }
    },
    "params": [
      {
        "name": "minYear",
        "value": 1990,
        "bind": {
          "input": "range",
          "min": 1990,
          "max": 2022,
          "step": 1,
          "name": "Minimum Year: "
        }
      },
      {
        "name": "maxYear",
        "value": 2022,
        "bind": {
          "input": "range",
          "min": 1990,
          "max": 2022,
          "step": 1,
          "name": "Maximum Year: "
        }
      }
    ],
    "transform": [
      {
        "filter": "datum.Year == minYear || datum.Year == maxYear"
      },
      {
        "window": [
          {
            "op": "first_value",
            "field": "Annual CO2 Emissions (per capita)",
            "as": "CO2_minYear"
          },
          {
            "op": "last_value",
            "field": "Annual CO2 Emissions (per capita)",
            "as": "CO2_maxYear"
          }
        ],
        "groupby": ["Entity"]
      },
      {
        "calculate": "datum.CO2_maxYear - datum.CO2_minYear",
        "as": "CO2_change"
      },
      {
        "sort": [{"field": "CO2_change", "order": "descending"}]
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "CO2_change",
        "type": "quantitative",
        "axis": {"title": "Change in CO2 Emissions (per capita)"}
      },
      "y": {
        "field": "Entity",
        "type": "nominal",
        "axis": {"title": "Region"},
        "sort": "-x"
      },
      "color": {
        "field": "CO2_change",
        "type": "quantitative",
        "scale": {
          "domain": [-10, 0, 10],  
          "range": ["red", "white", "blue"]
        },
        "legend": {
          "title": "Change in CO2"
        }
      }
    },
    "title": "Ordered Diverging Bar Chart: Change in COâ‚‚ Emissions (Red: Loss, White: Near 0, Blue: Gain)"
  }
  